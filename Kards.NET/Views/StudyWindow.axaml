<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Kards.NET.ViewModels"
        mc:Ignorable="d" Width="800" Height="450"
        x:DataType="vm:StudyWindowViewModel"
        x:Class="Kards.NET.Views.StudyWindow"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="Full"
        WindowState="Normal"
        Title="Study Window">

        <Border Background="#ffffff"
                Height="400"
                Width="750"
                BorderBrush="#475569"
                CornerRadius="10"
                Padding = "10"
                Margin = "10">
                
               <Grid>
                       <Carousel Name="Slides"
                                 ItemsSource="{Binding Kards}">
                               <Carousel.PageTransition >
                                       <CompositePageTransition>
                                               <PageSlide Duration="0:00:00.100" Orientation="Horizontal" />
                                       </CompositePageTransition>
                               </Carousel.PageTransition>
                               
                               <Carousel.ItemTemplate>
                                       <DataTemplate>
                                               <TextBlock  Text="{Binding CardName}"  
                                                          FontWeight="Bold"
                                                          FontSize="50"
                                                          FontFamily = "Roboto"
                                                          Foreground="#787878"
                                                          Margin="15,0"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                       </DataTemplate>
                                       
                               </Carousel.ItemTemplate>
                               
                       </Carousel>
                       
                       <Panel Margin="20">
                               <Button Background="White" FontSize="30" Click="Previous">&lt;</Button>
                               <Button Background="White" FontSize="30" Click="Next" 
                                       HorizontalAlignment="Right">&gt;</Button>
                       </Panel>
               </Grid> 
                
                
                
        </Border>
</Window>


