<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Kards.NET.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="Kards.NET.Views.EditDeckWindowView"
        x:DataType="vm:EditDeckWindowViewModel"
        Title="EditDeckWindowView">
        
        <Design.DataContext>
                <vm:EditDeckWindowViewModel/>
        </Design.DataContext>
        
        <Grid RowDefinitions="Auto, *">
                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Height="100" Background="#f5f5f5">
                        <Button Grid.Column="0"
                                Background="Transparent"
                                Margin="20,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image Source="avares://Kards.NET/Assets/Image/left-arrow.png"
                                               Height="25" Width="25"/>
                                        <TextBlock Text="Back"
                                                   Margin="10,0"
                                                   VerticalAlignment="Center"
                                                   Foreground="#3b82f6"
                                                   FontSize="20"/>
                                </StackPanel>
                        </Button>
                </Grid>

                <!-- Content -->
                <Grid Grid.Row="1" ColumnDefinitions="*,*">
                        <Border Background="#e5e7eb" Margin="10">
                                <TextBlock Text="Left content area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border Background="#d1d5db" Margin="10">
                                <TextBlock Text="Right content area" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                </Grid>
        </Grid>
       
</Window>
