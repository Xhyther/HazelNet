<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Kards.NET.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Kards.NET.Views.DeckView"
             x:DataType="viewModels:DeckViewModel">
    
    <Design.DataContext>
        <viewModels:DeckViewModel/>
    </Design.DataContext>
    
    
    <StackPanel Margin="20">
        <TextBlock Text="Decks" FontSize="24" Margin="0 0 0 10"/>
        
        <ItemsControl ItemsSource="{Binding Decks}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding DeckName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DeckDescription}" FontStyle="Italic"/>
                        <TextBlock Text="{Binding CreationDate}" FontSize="10"/>
                        <TextBlock Text="{Binding LastAcess}" FontSize="10"/>
                        <TextBlock Text="{Binding NumberOfCards}" FontSize="10"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
   
</UserControl>
