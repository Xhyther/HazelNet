<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Kards.NET.Views.CreateDeckView">
    
    <Border BorderBrush="Black" CornerRadius="15" VerticalAlignment="Center" Padding="20">
        <StackPanel Orientation="Vertical"  Margin="20,0">
            <TextBlock Margin="0 5" >Deck Name:</TextBlock>
            <TextBox Watermark="Enter Name of Deck here..."/>
            <Grid ColumnDefinitions="*, Auto, Auto" Margin="0,20">
                <!--Rectangle as Placeholder for Ok and Cancel -->
                <Rectangle Grid.Column="1" Fill="DimGray" 
                           Margin="0,0, 5, 0"
                           Width="70"
                           Height="30"/>
                <Rectangle Grid.Column="2" Fill="DimGray" 
                           Margin="5,0, 0 ,0"
                           Width="70"
                           Height="30"/>
            </Grid>
        </StackPanel>
    </Border>
    
</UserControl>
